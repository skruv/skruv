{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "target": "es2018",
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "es2020",
    "jsxFactory": "jsx",
    "jsxImportSource": "skruv"
  },
  "include": [
    "global.d.ts",
    "*",
    "**/*"
  ],
  "exclude": [
    // htm uses remote modules
    "examples/htm/*",
    "tests/jsx.test.js",
    "examples/todo/*",
    "examples/jsx/*",
    "examples/ssr/*",
    "node_modules",
    "types"
  ]
}
