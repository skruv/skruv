{
  "name": "skruv",
  "version": "0.5.2",
  "description": "No-dependency, no-build, small JS framework",
  "keywords": [],
  "bugs": {
    "url": "https://github.com/skruv/skruv/issues",
    "email": "skruv@richter.id"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skruv/skruv.git"
  },
  "license": "MIT",
  "author": "Svante Richter",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "default": "./index.js"
    },
    "./utils/css.js": "./utils/css.js",
    "./utils/state.js": "./utils/state.js",
    "./utils/syncify.js": "./utils/syncify.js",
    "./jsx-runtime": "./utils/jsx-runtime.js"
  },
  "main": "index.js",
  "types": "./types/index.js",
  "files": [
    "index.js",
    "utils/css.js",
    "utils/state.js",
    "utils/syncify.js",
    "utils/jsx-runtime.js",
    "types/index.d.ts"
  ],
  "scripts": {
    "build": "(cd examples/jsx && esbuild --sourcemap --bundle --minify --format=esm --jsx-import-source=skruv --jsx=automatic index.jsx --outfile=index.js)",
    "lint": "eslint . --ext js,jsx,json",
    "pre-release": "npm run build && npm run test && npm run lint -- --fix && npm run typecheck",
    "test": "node --test",
    "typecheck": "rm -rf types && tsc"
  },
  "devDependencies": {
    "cssom": "^0.5.0",
    "esbuild": "^0.14.48",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^4.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.7.4"
  }
}
