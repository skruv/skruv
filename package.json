{
  "name": "skruv",
  "version": "0.5.2",
  "description": "No-dependency, no-build, small JS framework",
  "keywords": [],
  "bugs": {
    "url": "https://github.com/skruv/skruv/issues",
    "email": "skruv@richter.id"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skruv/skruv.git"
  },
  "license": "MIT",
  "author": "Svante Richter",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "default": "./index.js"
    },
    "./utils/css.js": "./utils/css.js",
    "./utils/state.js": "./utils/state.js",
    "./utils/syncify.js": "./utils/syncify.js",
    "./utils/minidom.js": "./utils/minidom.js",
    "./utils/bundle.js": "./utils/bundle.js",
    "./jsx-runtime": "./utils/jsx-runtime.js"
  },
  "main": "index.js",
  "types": "./types/index.js",
  "bin": {
    "skruv-bundle": "./utils/bundle.js"
  },
  "files": [
    "index.js",
    "utils/css.js",
    "utils/state.js",
    "utils/syncify.js",
    "utils/minidom.js",
    "utils/bundle.js",
    "utils/jsx-runtime.js",
    "types/index.d.ts"
  ],
  "scripts": {
    "build": "npm run build-ssr && npm run build-jsx",
    "build-jsx": "(cd examples/jsx && npm exec skruv-bundle index.jsx index.min.js)",
    "build-ssr": "(cd examples/ssr && npm exec skruv-bundle index.js index.min.js)",
    "deno-ssr": "npm run build-ssr && (cd ./examples/ssr && deno run --allow-net --allow-read ./deno-ssr.js)",
    "lint": "eslint . --ext js,jsx,json",
    "node-ssr": "npm run build-ssr && (cd ./examples/ssr && node ./node-ssr.js)",
    "pre-release": "npm run build && npm run test && npm run lint -- --fix && npm run typecheck",
    "test": "node --test --experimental-test-coverage",
    "typecheck": "rm -rf types && tsc"
  },
  "devDependencies": {
    "cssom": "^0.5.0",
    "esbuild": "^0.14.48",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^4.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.7.4"
  }
}
