{
  "name": "skruv",
  "version": "0.3.1-alpha.19",
  "description": "No-dependency, no-build, small JS framework.",
  "keywords": [
    "small",
    "light",
    "vdom",
    "framework",
    "no-dependency",
    "no-build"
  ],
  "type": "module",
  "main": "skruv.min.js",
  "types": "./types/index.js",
  "exports": {
    "require": "./skruv.min.cjs.js",
    "import": "./skruv.min.js",
    "default": "./skruv.min.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skruv/skruv.git"
  },
  "bugs": {
    "url": "https://github.com/skruv/skruv/issues",
    "email": "skruv@richter.id"
  },
  "files": [
    "elements.js",
    "createState.js",
    "render.js",
    "index.js",
    "skruv.min.js",
    "skruv.min.js.map",
    "types/index.d.ts",
    "types/render.d.ts",
    "types/elements.d.ts",
    "types/createState.d.ts",
    "types/index.d.ts.map",
    "types/render.d.ts.map",
    "types/elements.d.ts.map",
    "types/createState.d.ts.map"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --no-cache --passWithNoTests",
    "standard": "standard",
    "typecheck": "tsc",
    "build": "esbuild index.js --bundle --sourcemap --minify --outfile=skruv.min.js --format=esm && esbuild index.js --bundle --sourcemap --minify --outfile=skruv.min.cjs.js --format=cjs",
    "release-prep": "npm update && npm run test && npm run standard -- --fix && npm run typecheck && npm run build"
  },
  "author": "Svante Richter",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.14.48",
    "jest": "^26.6.3",
    "standard": "^14.3.4",
    "typescript": "^4.7.4"
  }
}
