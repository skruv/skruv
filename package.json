{
  "name": "skruv",
  "version": "0.3.1-alpha.6",
  "description": "No-dependency, no-build, small JS framework.",
  "type": "module",
  "main": "skruv.min.js",
  "bugs": {
    "url": "https://github.com/skruv/skruv/issues",
    "email": "skruv@richter.id"
  },
  "files": [
    "elements.js",
    "createState.js",
    "render.js",
    "index.js",
    "skruv.min.js",
    "skruv.min.js.map"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --no-cache --passWithNoTests",
    "standard": "standard",
    "typecheck": "tsc",
    "build": "esbuild index.js --bundle --sourcemap --minify --outfile=skruv.min.js --format=esm",
    "release-prep": "npm update && npm run test && npm run standard -- --fix && npm run typecheck && npm run build"
  },
  "author": "Svante Richter",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.14.48",
    "jest": "^26.6.3",
    "standard": "^14.3.4",
    "typescript": "^4.7.4"
  }
}
