{
  "name": "skruv",
  "version": "0.4.0",
  "description": "No-dependency, no-build, small JS framework",
  "keywords": [],
  "bugs": {
    "url": "https://github.com/skruv/skruv/issues",
    "email": "skruv@richter.id"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skruv/skruv.git"
  },
  "license": "MIT",
  "author": "Svante Richter",
  "type": "module",
  "exports": {
    "import": "./skruv.js",
    "default": "./skruv.js"
  },
  "main": "skruv.js",
  "types": "./types/skruv.js",
  "files": [
    "elements.js",
    "createState.js",
    "render.js",
    "skruv.js",
    "jsx-runtime.js",
    "skruv.min.js",
    "skruv.min.js.map",
    "types/skruv.d.ts",
    "types/render.d.ts",
    "types/elements.d.ts",
    "types/createState.d.ts",
    "types/skruv.d.ts.map",
    "types/render.d.ts.map",
    "types/elements.d.ts.map",
    "types/createState.d.ts.map"
  ],
  "scripts": {
    "build": "esbuild skruv.js --bundle --sourcemap --minify --outfile=skruv.min.js --format=esm && (cd examples/jsx && esbuild  --sourcemap --bundle --minify --format=esm --jsx-import-source=../../ --jsx=automatic index.jsx --outfile=index.js)",
    "lint": "eslint . --ext js,jsx,json",
    "pre-release": "npm update && npm run test && npm run lint -- --fix && npm run typecheck && npm run build",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --env=jsdom --no-cache --passWithNoTests",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "cssom": "^0.5.0",
    "esbuild": "^0.14.48",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^4.0.2",
    "jest": "^26.6.3",
    "jsdom": "^20.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.7.4"
  }
}
